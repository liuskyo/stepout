<!DOCTYPE html>
<html>
<head>
  <title>Stepout</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
    <div class="row">
      <div class="col-md-12">
       <% if flash[:notice].present? %>
          <div class="alert alert-success" role="alert"><%= flash[:notice] %>
          </div>
          <% end %>

        <% if flash[:alert].present? %>
          <div class="alert alert-danger" role="alert"><%= flash[:alert] %></div>
          <% end %>

      <div class="container">
         <ul class="nav nav-pills">


    <% if current_user %>
      <li><%= link_to "登出", destroy_user_session_path, method: :delete %>
      </li>
      <li><%= link_to "修改資料", edit_registration_path(:user)%></li>

    <% else %>
      <li><%= link_to('註冊', new_registration_path(:user)) %></li>
      <li><%= link_to('會員登入', new_session_path(:user)) %></li>

      <li>
         <%= link_to "Facebook登入", user_omniauth_authorize_path(:facebook) %>
      </li>
      <% end %>
    </ul>
     <p class="notice"><%= notice %></p>
     <p class="alert"><%= alert %></p>
<%= yield %>
         </div>
     </div>
    </div>
  </div>
</body>
</html>
