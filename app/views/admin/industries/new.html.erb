<hr>
<% if @industry.errors.any? %>
      <ul>
        <% @industry.errors.full_messages.each do |msg| %>

        <li><%= msg %></li>

        <% end %>
      </ul>
<% end %>

<%= form_for @industry, :url => admin_industries_path do |f| %>

 <div class="form-group">
   <%= f.label :photo, "圖片" %>
   <%= f.file_field :photo %>
 </div>

 <div class="form-group">
   <%= f.label :name, "產業名稱" %>
   <%= f.text_field :name, :required => true, :class => "form-control" %>
 </div>
 <div class="form-group">
   <%= f.submit "新增", :class=> "btn btn-primary" %>
</div>
<% end %>