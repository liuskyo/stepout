<hr>
<% if @position.errors.any? %>
      <ul>
        <% @position.errors.full_messages.each do |msg| %>

        <li><%= msg %></li>

        <% end %>
      </ul>
<% end %>

<%= form_for @position, :url => admin_position_path(@position), :method => :patch do |f| %>

  <div class="form-group">
    <%= f.label :photo, "圖片" %>
    <%= f.file_field :photo %>
  </div>

  <div class="form-group">
    <%= f.label :name, "職業名稱" %>
    <%= f.text_field :name, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit "修改", :class=> "btn btn-primary" %>
  </div>
<% end %>