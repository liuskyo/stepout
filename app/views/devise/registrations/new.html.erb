<div class="container">

<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password,"新密碼" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation,"密碼確認" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="field">
    <div><%= f.label :name,"姓名" %><br />
    <%= f.text_field :name %></div>
  </div>

  <div class="form-group">
    <div><%= f.label :photo, "個人頭像"%><br/>
      <%= f.file_field :photo%></div>
  </div>

    <div class="field">
    <div><%= f.label :birthday,"生日" %><br />
    <%= f.date_field :birthday %></div>
  </div>

    <div class="field">
    <div><%= f.label :major,"主修" %><br />
    <%= f.text_field :major %></div>
    </div>

    <div class="field">
    <div><%= f.label :occupation,"職業" %><br />
    <%= f.text_field :occupation %></div>
    </div>

    <div class="field">
    <div><%= f.label :school,"畢業學校" %><br />
    <%= f.text_field :school %></div>
    </div>
    <div class="field">
    <div><%= f.label :former_occupation,"前工作" %><br />
    <%= f.text_field :former_occupation %></div>
    </div>

  <div class="actions">
    <%= f.submit "註冊" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>

<hr>
